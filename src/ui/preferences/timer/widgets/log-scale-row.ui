<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="FtLogScaleRow" parent="AdwActionRow">
    <property name="child">
      <object class="GtkGrid">
        <property name="orientation">vertical</property>
        <property name="row-spacing">6</property>
        <property name="column-spacing">30</property>
        <child>
          <object class="GtkLabel" id="title_label">
            <property name="halign">start</property>
            <property name="valign">baseline-fill</property>
            <property name="hexpand">true</property>
            <style>
              <class name="title"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="value_label">
            <property name="halign">end</property>
            <property name="valign">baseline-fill</property>
            <property name="width-request">250</property>
            <property name="xalign">1.0</property>
            <layout>
              <property name="column">1</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="FtLogScale" id="scale">
            <property name="halign">fill</property>
            <property name="show-fill-level">true</property>
            <layout>
              <property name="column">0</property>
              <property name="column-span">2</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
      </object>
    </property>
    <style>
      <class name="ft-log-scale"/>
    </style>
  </template>
</interface>
