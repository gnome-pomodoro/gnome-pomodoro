<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <menu id="stats_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Day</attribute>
        <attribute name="action">stats.set-timeframe</attribute>
        <attribute name="target">day</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Week</attribute>
        <attribute name="action">stats.set-timeframe</attribute>
        <attribute name="target">week</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Month</attribute>
        <attribute name="action">stats.set-timeframe</attribute>
        <attribute name="target">month</attribute>
      </item>
    </section>
  </menu>
  <template class="PomodoroStatsView" parent="AdwBreakpointBin">
    <property name="width-request">360</property>
    <property name="height-request">520</property>
    <property name="child">
      <object class="GtkStack" id="stack">
        <property name="hhomogeneous">false</property>
        <property name="vhomogeneous">false</property>
        <property name="transition-duration">300</property>
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">placeholder</property>
            <property name="child">
              <object class="AdwStatusPage">
                <property name="icon-name">stats-symbolic</property>
                <property name="title" translatable="yes">Nothing to see here yet</property>
                <property name="description" translatable="yes">Finish a few Pomodoros to fill this up!</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">content</property>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">never</property>
                <child>
                  <object class="AdwClamp">
                    <property name="width-request">300</property>
                    <property name="maximum-size">600</property>
                    <property name="tightening-threshold">300</property>
                    <property name="halign">fill</property>
                    <property name="valign">fill</property>
                    <property name="unit">px</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="margin-top">20</property>
                        <property name="margin-bottom">10</property>
                        <property name="margin-start">10</property>
                        <property name="margin-end">10</property>
                        <child>
                          <object class="GtkBox">
                            <property name="spacing">6</property>
                            <property name="height-request">60</property>
                            <child>
                              <object class="GtkMenuButton">
                                <property name="name">title</property>
                                <property name="hexpand">true</property>
                                <property name="halign">start</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="popover">
                                  <object class="PomodoroStatsDatePopover" id="date_popover">
                                    <signal name="timeframe-selected" handler="on_timeframe_selected"/>
                                    <signal name="date-selected" handler="on_date_selected"/>
                                  </object>
                                </property>
                                <property name="child">
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">3</property>
                                    <property name="valign">center</property>
                                    <child>
                                      <object class="GtkLabel" id="title_label">
                                        <property name="halign">start</property>
                                        <property name="hexpand">true</property>
                                        <property name="single-line-mode">true</property>
                                        <property name="xalign">0.0</property>
                                        <property name="ellipsize">end</property>
                                        <style>
                                          <class name="title-1"/>
                                        </style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="subtitle_label">
                                        <property name="halign">start</property>
                                        <property name="hexpand">true</property>
                                        <property name="single-line-mode">true</property>
                                        <property name="xalign">0.0</property>
                                        <property name="ellipsize">end</property>
                                        <style>
                                          <class name="small-text"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox">
                                <property name="name">navigation</property>
                                <property name="spacing">3</property>
                                <child>
                                  <object class="GtkButton" id="up_button">
                                    <property name="valign">baseline-fill</property>
                                    <property name="action-name">stats.up</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">go-up-symbolic</property>
                                        <style>
                                          <class name="symbolic"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton">
                                    <property name="valign">baseline-fill</property>
                                    <property name="action-name">stats.previous</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">go-previous-symbolic</property>
                                        <style>
                                          <class name="symbolic"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton">
                                    <property name="valign">baseline-fill</property>
                                    <property name="action-name">stats.next</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">go-next-symbolic</property>
                                        <style>
                                          <class name="symbolic"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton" id="today_button">
                                    <property name="action-name">stats.today</property>
                                    <property name="valign">baseline-fill</property>
                                    <property name="margin-end">6</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">go-last-symbolic</property>
                                        <style>
                                          <class name="symbolic"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object><!-- navigation box -->
                            </child>
                          </object><!-- box -->
                        </child>
                        <child>
                          <object class="GtkStack" id="pages">
                            <property name="vhomogeneous">false</property>
                            <property name="vexpand">true</property>
                            <property name="transition-duration">300</property>
                            <property name="margin-start">10</property>
                            <property name="margin-end">10</property>
                          </object>
                        </child>
                      </object><!-- box -->
                    </property>
                  </object><!-- clamp -->
                </child>
              </object><!-- scrolled_window -->
            </property>
          </object>
        </child>
      </object><!-- stack -->
    </property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 450px</condition>
        <setter object="today_button" property="visible">false</setter>
      </object>
    </child>
  </template>
</interface>
