<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="PomodoroSidebarRow" parent="GtkBox">
    <property name="spacing">10</property>
    <child>
      <object class="GtkImage" id="icon">
        <property name="icon-name" bind-source="PomodoroSidebarRow" bind-property="icon-name" bind-flags="sync-create"/>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="label" bind-source="PomodoroSidebarRow" bind-property="title" bind-flags="sync-create"/>
        <property name="single-line-mode">true</property>
        <property name="xalign">0.0</property>
        <style>
          <class name="sidebar-label"/>
        </style>
      </object>
    </child>
  </template>
</interface>
