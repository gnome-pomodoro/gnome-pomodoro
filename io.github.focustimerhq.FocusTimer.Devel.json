{
  "app-id": "io.github.focustimerhq.FocusTimer.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "focus-timer",
  "tags": [
    "devel"
  ],
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--system-talk-name=org.freedesktop.login1",
    "--system-talk-name=org.freedesktop.timedate1",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.ScreenSaver",
    "--talk-name=org.gnome.Mutter.IdleMonitor",
    "--talk-name=org.gnome.ScreenSaver",
    "--talk-name=org.gnome.Shell",
    "--talk-name=org.gtk.vfs.*",
    "--persist=.local/share/gnome-pomodoro",
    "--filesystem=xdg-run/gvfsd",
    "--env=G_MESSAGES_DEBUG=focus-timer",
    "--env=G_ENABLE_DIAGNOSTIC=1"
  ],
  "cleanup": [
    "/include",
    "/lib/girepository-1.0",
    "/lib/pkgconfig",
    "/man",
    "/share/aclocal",
    "/share/doc",
    "/share/gir-1.0",
    "/share/gtk-doc",
    "/share/pkgconfig",
    "/share/man",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libpeas",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "-Dlua51=false",
        "-Dpython3=false",
        "-Dintrospection=true",
        "-Dvapi=true",
        "--libdir=/app/lib"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libpeas.git",
          "tag": "libpeas-1.36.0"
        }
      ]
    },
    {
      "name": "libadwaita",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "-Dexamples=false",
        "-Dtests=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
          "tag": "1.8.2"
        }
      ],
      "modules": [
        {
          "name": "libsass",
          "buildsystem": "meson",
          "builddir": true,
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/lazka/libsass.git",
              "branch": "meson"
            }
          ]
        },
        {
          "name": "sassc",
          "buildsystem": "meson",
          "builddir": true,
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/lazka/sassc.git",
              "branch": "meson"
            }
          ]
        }
      ]
    },
    {
      "name": "gom",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/gom.git",
          "tag": "0.5.5"
        }
      ]
    },
    {
      "name": "focus-timer",
      "buildsystem": "meson",
      "config-opts": [
        "-Dprofile=development"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}