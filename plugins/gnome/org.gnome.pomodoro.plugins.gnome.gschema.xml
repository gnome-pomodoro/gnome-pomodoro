<schemalist>
  <schema id="org.gnome.pomodoro.plugins.gnome" path="/org/gnome/pomodoro/plugins/gnome/" gettext-domain="gnome-pomodoro">
    <key name="indicator-type" type="s">
      <choices>
        <choice value="text"/>
        <choice value="short-text"/>
        <choice value="icon"/>
      </choices>
      <default>"icon"</default>
      <summary>Indicator type</summary>
      <description>The look of the indicator.</description>
    </key>
    <key name="hide-system-notifications" type="b">
      <default>false</default>
      <summary>Hide notifications during pomodoro</summary>
      <description>Whether to hide other notifications during pomodoro.</description>
    </key>
    <key name="blur-effect" type="b">
      <default>true</default>
      <summary>Blur effect</summary>
      <description>Whether to use blur effect for the screen overlay background. On some graphics cards or drivers it can cause issues.</description>
    </key>
  </schema>
</schemalist>
